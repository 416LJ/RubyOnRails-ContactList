  <div class="field "form-group"">
 
    <%= form.text_field :phone, class:'form-control', placeholder:'Phone Number' %>
  </div>
<br/>
  <div class="field "form-group"">
  
    <%= form.text_field :insta, class:'form-control', placeholder:'Instagram' %>
  </div>
<br/>
