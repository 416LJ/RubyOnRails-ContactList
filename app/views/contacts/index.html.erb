

<%if user_signed_in?
%>
<table class="table table-bordered table-hover table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
  
      <th>Phone</th>
      <th>Email</th>
      <th>Instagram </th>
      
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
    <%if contact.user == current_user%>
      <tr>
        <td><%= link_to contact.first_name + ' ' + contact.last_name, contact %></td>
        
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.insta %></td>
    
       
        
        <td><%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path, class:'btn btn-secondary' %>
<%else%>

<h1>Hello There,</h1>
Sign Up or Sign In.
<%end%>